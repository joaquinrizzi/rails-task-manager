<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>
        <%= @task.title%>
      </h1>
    </div>
    <div class="col-6">
      <%= link_to "Edit this task", edit_task_path(@task), {:class => "btn btn-primary"}%>
    </div>
  </div>
  <div class="row">
    <div class="col-12 card">
      <div class="card-body">
        <p class="card-text">
          <%= @task.details%>
        </p>
        <%= link_to "Back to list", tasks_path, {class: "link-primary"}%>
      </div>
    </div>
  </div>
</div>
